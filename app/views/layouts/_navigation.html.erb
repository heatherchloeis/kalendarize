    <%= icon('fas', 'bars') %>
  </button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<%= link_to about_path, class: "nav-link" do %>
					<%= icon('fas', 'info') %> About
				<% end %>
			</li>
			<li class="nav-item">
				<%= link_to developer_path, class: "nav-link" do %>
					<%= icon('fas', 'code') %> Developer
				<% end %>
			</li>
			<li class="nav-item">
				<%= link_to help_path, class: "nav-link" do %>
